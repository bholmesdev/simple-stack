---
import { ViewTransitions } from "astro:transitions";

type Props = {
	title: string;
};

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <ViewTransitions />
  <title>{title}</title>
</head>
<body>
  <slot />
</body>
</html>